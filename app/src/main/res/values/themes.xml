<resources>
    <!-- Base application theme. -->
    <style name="Theme.SimplePartyScreen" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.SimplePartyScreen.TextViewParty" parent="Widget.MaterialComponents.TextView" />

    <style name="Theme.SimplePartyScreen.TextViewParty.PartyTitle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.SimplePartyScreen.TextViewParty.PartyHostName">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.SimplePartyScreen.TextViewParty.PartyGuestName">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.SimplePartyScreen.TextViewParty.PartyLabelGuestList">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>