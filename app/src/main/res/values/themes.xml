<resources>
    <!-- Base application theme. -->
    <style name="Theme.SimplePartyScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.SimplePartyScreen.textview_party" parent="Widget.MaterialComponents.TextView" />

    <style name="Theme.SimplePartyScreen.textview_party.party_title">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.SimplePartyScreen.textview_party.party_host_name">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.SimplePartyScreen.textview_party.party_guest_name">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.SimplePartyScreen.textview_party.party_label_guest_list">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>